<Window
    x:Class="RepoAIfyApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RepoAIfyApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RepoAIfy"
    Width="800"
    Height="900"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="10">
        <ContentControl IsEnabled="{Binding IsUiEnabled}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="200" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Row 0: Source Directory  -->
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Source Directory:" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="120,5,0,5"
                    VerticalContentAlignment="Center"
                    Text="{Binding SourceDirectory, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="80"
                    Margin="5"
                    Command="{Binding BrowseSourceCommand}"
                    Content="Browse..." />

                <!--  Row 1: Options File  -->
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Options File:" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="120,5,0,5"
                    VerticalContentAlignment="Center"
                    Text="{Binding OptionsFile, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="80"
                    Margin="5"
                    Command="{Binding BrowseOptionsCommand}"
                    Content="Browse..." />

                <!--  Row 2: File Tree View  -->
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    Content="Files to Include:" />
                <TreeView
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,25,0,0"
                    ItemsSource="{Binding RootNodes}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type local:FileSystemNode}" ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsChecked}" />
                                <TextBlock Margin="5,0" Text="{Binding Name}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.Resources>
                </TreeView>

                <!--  Row 3: Included Extensions  -->
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Included Extensions (comma-separated):" />
                <TextBox
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="250,5,0,5"
                    VerticalContentAlignment="Center"
                    Text="{Binding IncludedExtensions, UpdateSourceTrigger=PropertyChanged}" />

                <!--  Row 4: Excluded Directories  -->
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Excluded Directories (comma-separated glob patterns):" />
                <TextBox
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="350,5,0,5"
                    VerticalContentAlignment="Center"
                    Text="{Binding ExcludedDirectories, UpdateSourceTrigger=PropertyChanged}" />

                <!--  Row 5: Max Chunk Size (KB)  -->
                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Max Chunk Size (KB):" />
                <TextBox
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="150,5,0,5"
                    VerticalContentAlignment="Center"
                    Text="{Binding MaxChunkSizeKb}" />

                <!--  Row 6: Output Directory  -->
                <Label
                    Grid.Row="6"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Output Directory:" />
                <TextBox
                    Grid.Row="6"
                    Grid.Column="0"
                    Margin="120,5,0,5"
                    VerticalContentAlignment="Center"
                    Text="{Binding OutputDirectory}" />

                <!--  Row 7: Generate Button  -->
                <Button
                    Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="5"
                    Command="{Binding GenerateCommand}"
                    Content="Generate"
                    FontWeight="Bold" />
                <!--  Row 8: Log Output (Outside of the disabled area)  -->
                <Label
                    Grid.Row="8"
                    Grid.Column="0"
                    Margin="0,5,0,0"
                    VerticalAlignment="Top"
                    Content="Logs:" />
                <TextBox
                    Name="LogTextBox"
                    Grid.Row="8"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,30,0,0"
                    AcceptsReturn="True"
                    IsReadOnly="True"
                    Text="{Binding LogOutput}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />

                <!--  Row 9: Status Bar  -->
                <StatusBar
                    Grid.Row="9"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">
                    <StatusBarItem>
                        <TextBlock Text="{Binding StatusText}" />
                    </StatusBarItem>
                </StatusBar>
            </Grid>
        </ContentControl>

    </Grid>
</Window>